<h1>Create your <%= @location.name %> Hike</h1>

<%= form_for [@location, @hike] do |f| %>
  <div class="form-group">
    <%= f.label :date_hiked %>
    <%= f.date_field :date_hiked, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :route %>
    <%= f.text_field :route, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :distance %>
    <%= f.text_field :distance, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :elevation_gain %>
    <%= f.text_field :elevation_gain, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :highest_point %>
    <%= f.text_field :highest_point, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: "15" %>
  </div>

  <%= f.submit %>
<% end %>

<%= link_to "Back to All #{@location.name} Hikes", location_hikes_path(@location) %>
