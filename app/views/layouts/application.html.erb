<!DOCTYPE html>
<html>
<head>
  <title>TrailBox</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div>
  <p><%= flash[:notice] %></p>
</div>

<% if current_user %>
  <p>Hi, <%= current_user.username %></p><br>
  <%= link_to "Logout", logout_path, method: :delete %>
<% else %>
  <%= link_to "Login", login_path %>
<% end %>

<%= yield %>

</body>
</html>
